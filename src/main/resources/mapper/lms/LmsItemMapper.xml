<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ev.linbo.backend.modules.lms.mapper.LmsItemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ev.linbo.backend.modules.lms.model.LmsItem">
        <id column="id" property="id" />
        <result column="locator" property="locator" />
        <result column="delivery_sn" property="deliverySn" />
        <result column="user_sn" property="userSn" />
        <result column="location" property="location" />
        <result column="note" property="note" />
        <result column="create_time" property="createTime" />
        <result column="sku" property="sku" />
        <result column="size" property="size" />
        <result column="item_status" property="itemStatus" />
        <result column="archived" property="archived" />
    </resultMap>

    <select id="getItemCount" resultType="java.lang.Long">
        select count(*)
        from lms_item
        where location = #{location} and create_time like #{date} and status = #{status}
    </select>

</mapper>
